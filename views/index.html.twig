<!DOCTYPE html>
<html>
  <head>
    <link href="/geo-bootstrap.css" rel="stylesheet" type="text/css">
    <link href="/styles.css" rel="stylesheet" type="text/css">
  </head>
  <body>
    <nav class="navbar navbar-inner">
      <div class="container navbar-left">
        <a href="/">Bands</a>&nbsp;&nbsp;<a href="/fans">Fans</a>
      </div>
      <div class="navbar-right">

        <h3>NAVBAR</h3>
      </div>
    </nav>


    <div class="container">
      <br>
      <h1>Bands</h1>
      <img src="./mchammer.gif" alt="pelase hammer dont hurt em" /> &nbsp;&nbsp;&nbsp;&nbsp;
      <img src="./mchammer.gif" alt="pelase hammer dont hurt em" />&nbsp;&nbsp;&nbsp;&nbsp;
      <img src="./mchammer.gif" alt="pelase hammer dont hurt em" />&nbsp;&nbsp;&nbsp;&nbsp;
      <form method="post" action="add-band">
        <div class="form-group">
          <label for="name">Band Name:</label>
          <input class="form-control" type="text" name="name">
        </div>
        <div class="form-group">
          <label for="genre">Genre:</label>
          <select name="genre">
            <option value="black-metal">Black Metal</option>
            <option value="death metal">Death Metal</option>
            <option value="speed metal">Speed Metal</option>
            <option value="power metal">Power Metal</option>
            <option value="thrash metal">Thrash Metal</option>
            <option value="stoner metal">Stoner Metal</option>
            <option value="viking metal">Viking Metal</option>
            <option value="doom metal">Doom Metal</option>
            <option value="alternative metal">Alternative Metal</option>
            <option value="folk metal">Folk Metal</option>
          </select>
        </div>
        <div class="form-group">
          <label for="description">Description:</label>
          <input class="form-control" type="text" name="description">
        </div>
        <div class="form-group">
          <label for="members">Members:</label>
          <textarea name="members" rows="3" cols="40"></textarea>
        </div>
        <button class="btn btn-primary" type="submit" name="button">Excelsior!</button>
      </form>
      {% for band in bands %}
        <h2>{{band.name}}</h2>
        <h4>{{band.genre}}</h4>
        <h4>Members-> {{band.members}}</h4>
        <h4>Description-> {{band.description}}</h4>
        <br><br>
      {% endfor %}
    </div>
  </body>
</html>
